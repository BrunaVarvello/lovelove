<body>
    <div class="container">
        <h1 id="question">Quer casar comigo?</h1>
        <div class="buttons" id="buttons">
            <button onclick="firstYes()">Sim</button>
            <button onclick="firstNo()">Não</button>
        </div>
    </div>

    <script>
        function firstYes() {
            document.getElementById("question").textContent = "Mas tem que ser hoje, agora. 20h no cartório. Topa mesmo?";
            document.getElementById("buttons").innerHTML = `
                <button onclick="secondYes()">Sim</button>
                <button onclick="secondNo()">Não</button>
            `;
        }

        function firstNo() {
            document.getElementById("question").textContent = "Ah, sério? Pense bem, talvez você mude de ideia :)";
            document.getElementById("buttons").innerHTML = `
                <button onclick="firstYes()">Ok, pensei melhor. Sim</button>
                <button onclick="finalNo()">Não, ainda não estou pronto</button>
            `;
        }

        function secondYes() {
            document.getElementById("question").textContent = "Está marcado, te encontro lá. Vá de terno!";
            document.getElementById("buttons").style.display = 'none';
        }

        function secondNo() {
            document.getElementById("question").textContent = "Sem pressa, só queria que soubesse que você é o meu amor!";
            document.getElementById("buttons").style.display = 'none';
        }

        function finalNo() {
            document.getElementById("question").textContent = "Ok, respeito seu tempo. Mas saiba que sempre estarei aqui te esperando!";
            document.getElementById("buttons").style.display = 'none';
        }
    </script>
</body>
</html>
